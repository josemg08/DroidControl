<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:paddingLeft="6dp" android:paddingRight="6dp" android:weightSum="6">

    <Button
        android:id="@+id/searchNetworksButton"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:text="@string/searchNetworks"
        android:onClick="searchServers"
        android:layout_gravity="center"
        android:layout_margin="5dp" style="@style/button_black"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressconnectionBar" android:layout_gravity="center" android:visibility="invisible"
        android:indeterminate="false"/>
    <Button
        android:id="@+id/serverButton"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:onClick="connect"
        android:textColor="@android:color/white"
        android:textSize="12sp"/>
   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wayToConnect"
        android:id="@+id/txtManually" android:layout_gravity="left|center_vertical"/>
    <TextView
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/messageHowConnect"
        android:id="@+id/infoConnection" android:layout_gravity="center" android:padding="4dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp" android:layout_gravity="center" android:layout_marginTop="5dp">
        <Button
            style="@style/button_black"
            android:layout_width="107dp"
            android:layout_height="wrap_content"
            android:text="@string/connectBttn"
            android:id="@+id/connectButton" android:onClick="connect"
            android:layout_margin="5dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ipInput"
            android:hint="@string/ipHint"
            android:layout_margin="5dp"/>
    </LinearLayout>
</LinearLayout>

